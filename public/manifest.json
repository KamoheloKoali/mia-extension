{
  "manifest_version": 3,
  "name": "MIA",
  "version": "1.0.0",
  "description": "Designed to automate minutes for meetings ",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Meeting Minutes Assistant "
  },
  "background": {
    "service_worker": "assets/background2.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting", "tabs", "tabCapture"],
  "host_permissions": ["<all_urls>"]
}
